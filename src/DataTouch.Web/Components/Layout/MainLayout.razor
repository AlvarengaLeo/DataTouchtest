@inherits LayoutComponentBase
@implements IAsyncDisposable
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />

<MudLayout>
    <!-- ═══════════════ PREMIUM HEADER ═══════════════ -->
    <div class="header-wrapper">
        <header class="premium-header">
            <!-- Hamburger Menu -->
            <button class="header-menu-btn" @onclick="ToggleDrawer" aria-label="Toggle menu">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </button>
            
            <!-- Logo/Title -->
            <span class="header-logo">DataTouch</span>
            
            <!-- Spacer -->
            <div class="header-spacer"></div>
            
            <!-- User Avatar with Popover -->
            <AuthorizeView>
                <Authorized>
                    <div class="header-user-container">
                        <button class="header-avatar" @onclick="ToggleUserMenu" @onclick:stopPropagation="true">
                            @GetUserInitials(context.User.Identity?.Name)
                        </button>
                        
                        @if (_userMenuOpen)
                        {
                            <div class="header-popover" @onclick:stopPropagation="true">
                                <div class="popover-arrow"></div>
                                
                                <!-- Environment Info -->
                                <div class="popover-row popover-environment">
                                    <span class="env-label">Entorno:</span>
                                    <span class="env-value">@GetDisplayName(context.User.Identity?.Name)</span>
                                </div>
                                
                                <!-- Theme Toggle -->
                                <div class="popover-row popover-theme">
                                    <span class="theme-label">Tema</span>
                                    <div class="theme-toggle">
                                        <button class="theme-btn @(!_isDarkMode ? "active" : "")" @onclick="() => SetTheme(false)">
                                            Claro
                                        </button>
                                        <button class="theme-btn @(_isDarkMode ? "active" : "")" @onclick="() => SetTheme(true)">
                                            Oscuro
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- Logout -->
                                <a href="/api/auth/logout" class="popover-row popover-logout">
                                    Cerrar sesión
                                </a>
                            </div>
                        }
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="header-login-btn">Iniciar sesión</a>
                </NotAuthorized>
            </AuthorizeView>
        </header>
    </div>
    
    <!-- Click overlay to close popover -->
    @if (_userMenuOpen)
    {
        <div class="popover-overlay" @onclick="CloseUserMenu"></div>
    }
    
    <!-- ═══════════════ DRAWER (Sidebar) ═══════════════ -->
    <MudDrawer @bind-Open="_drawerOpen" Variant="@DrawerVariant.Responsive" ClipMode="DrawerClipMode.Never" Elevation="2" Class="drawer-dark drawer-premium">
        <MudNavMenu>
            @foreach (var item in _navItems)
            {
                <MudNavLink Href="@item.Href" Icon="@item.MudIcon" Match="@(item.Href == "/" ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                    @item.Label
                </MudNavLink>
            }
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent Class="main-content-wrapper has-bottom-nav">
        <CascadingValue Value="_drawerOpen" Name="IsDrawerOpen">
            <div class="swipe-navigation-wrapper" id="swipe-nav-wrapper">
                <div class="page-container">
                    @Body
                </div>
            </div>
            <!-- Peek indicators for swipe navigation -->
            <div class="swipe-peek-container swipe-peek-left" id="swipe-peek-left">
                <div class="swipe-peek-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </div>
            </div>
            <div class="swipe-peek-container swipe-peek-right" id="swipe-peek-right">
                <div class="swipe-peek-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </div>
            </div>
        </CascadingValue>
    </MudMainContent>
</MudLayout>

<!-- ═══════════════ MOBILE BOTTOM NAVIGATION (OUTSIDE MudLayout to avoid transform stacking issues) ═══════════════ -->
<nav class="mobile-bottom-nav">
    @{ var bottomItems = _navItems.Take(4).ToList(); }
    @foreach (var item in bottomItems)
    {
        <a href="@item.Href" class="nav-item @(IsActive(item.Href) ? "active" : "")">
            @((MarkupString)item.SvgIcon)
            <span>@item.ShortLabel</span>
        </a>
    }
    <!-- More Button -->
    <button class="nav-item @(_moreSheetOpen ? "active" : "")" @onclick="ToggleMoreSheet" @onclick:stopPropagation="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="1"></circle>
            <circle cx="12" cy="5" r="1"></circle>
            <circle cx="12" cy="19" r="1"></circle>
        </svg>
        <span>Más</span>
    </button>
</nav>

<!-- ═══════════════ MORE SHEET (Bottom Sheet) - OUTSIDE MudLayout ═══════════════ -->
@if (_moreSheetOpen)
{
    <div class="more-sheet-overlay" @onclick="CloseMoreSheet"></div>
    <div class="more-sheet">
        <div class="more-sheet-handle"></div>
        <div class="more-sheet-content">
            @{ var extraItems = _navItems.Skip(4).ToList(); }
            @foreach (var item in extraItems)
            {
                <a href="@item.Href" class="more-sheet-item @(IsActive(item.Href) ? "active" : "")" @onclick="CloseMoreSheet">
                    @((MarkupString)item.SvgIcon)
                    <span>@item.Label</span>
                </a>
            }
        </div>
    </div>
}

<style>
    /* ═══════════════ CONTENT WRAPPERS ═══════════════ */
    .swipe-navigation-wrapper {
        width: 100%;
        max-width: 100%;
        overflow-x: hidden;
    }
    
    /* ═══════════════ PAGE CONTAINER (Premium Layout) ═══════════════ */
    .page-container {
        max-width: 100%;
        margin: 0;
        padding: 24px 32px;
        width: 100%;
        box-sizing: border-box;
        overflow-x: hidden;
    }
    
    /* Medium screens (tablets, smaller laptops) */
    @@media (max-width: 1280px) {
        .page-container {
            padding: 20px 24px;
        }
    }
    
    /* Tablets */
    @@media (max-width: 960px) {
        .page-container {
            padding: 16px 20px;
        }
        
        /* Add bottom padding for bottom nav */
        .has-bottom-nav .page-container {
            padding-bottom: 100px;
        }
    }
    
    /* Mobile */
    @@media (max-width: 600px) {
        .page-container {
            padding: 12px 16px;
            padding-bottom: 100px;
        }
    }
    
    /* Extra wide screens - add more breathing room */
    @@media (min-width: 1920px) {
        .page-container {
            max-width: 100%;
            padding: 28px 40px;
        }
    }
    
    /* ═══════════════ MOBILE BOTTOM NAVIGATION ═══════════════ */
    .mobile-bottom-nav {
        display: none;
    }
    
    @@media (max-width: 960px) {
        .mobile-bottom-nav {
            display: flex;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100vw;
            max-width: 100vw;
            height: 64px;
            background: #0E141B;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            justify-content: space-around;
            align-items: center;
            padding: 0 8px;
            padding-bottom: env(safe-area-inset-bottom, 0);
            z-index: 1200;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
            box-sizing: border-box;
        }
        
        .mobile-bottom-nav .nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            padding: 8px 12px;
            background: transparent;
            border: none;
            color: rgba(255, 255, 255, 0.5);
            text-decoration: none;
            font-size: 10px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            min-width: 56px;
        }
        
        .mobile-bottom-nav .nav-item svg {
            width: 22px;
            height: 22px;
            transition: all 0.2s ease;
        }
        
        .mobile-bottom-nav .nav-item.active {
            color: #6366F1;
        }
        
        .mobile-bottom-nav .nav-item.active svg {
            stroke: #6366F1;
        }
        
        .mobile-bottom-nav .nav-item:hover:not(.active) {
            color: rgba(255, 255, 255, 0.8);
        }
    }
    
    /* ═══════════════ MORE SHEET (Bottom Sheet) ═══════════════ */
    .more-sheet-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        z-index: 1300;
        animation: fadeIn 0.2s ease;
    }
    
    .more-sheet {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: #1A1F2B;
        border-radius: 20px 20px 0 0;
        padding: 12px 16px 24px;
        padding-bottom: calc(24px + env(safe-area-inset-bottom, 0));
        z-index: 1400;
        animation: slideUp 0.25s ease-out;
    }
    
    .more-sheet-handle {
        width: 40px;
        height: 4px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 2px;
        margin: 0 auto 16px;
    }
    
    .more-sheet-content {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }
    
    .more-sheet-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 14px 16px;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 15px;
        font-weight: 500;
        border-radius: 12px;
        transition: all 0.2s ease;
    }
    
    .more-sheet-item svg {
        width: 22px;
        height: 22px;
    }
    
    .more-sheet-item:hover,
    .more-sheet-item.active {
        background: rgba(99, 102, 241, 0.15);
        color: #818CF8;
    }
    
    .more-sheet-item.active svg {
        stroke: #818CF8;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    @@keyframes slideUp {
        from { transform: translateY(100%); }
        to { transform: translateY(0); }
    }
</style>

