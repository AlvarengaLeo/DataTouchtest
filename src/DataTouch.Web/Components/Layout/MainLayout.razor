                await JSRuntime.InvokeVoidAsync("SwipeNavigation.init", _dotNetRef, _swipeRoutes, _currentNavIndex);
                _jsInitialized = true;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"SwipeNavigation init failed: {ex.Message}");
            }
        }
    }
    
    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        _currentNavIndex = GetNavIndexFromUrl(_currentUrl);
        _moreSheetOpen = false;
        _drawerOpen = false;

        // Update JS with new index
        if (_jsInitialized)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("SwipeNavigation.updateIndex", _currentNavIndex);
            }
            catch { /* Ignore if JS not available */ }
        }

        await InvokeAsync(StateHasChanged);
    }

    private int GetNavIndexFromUrl(string url)
    {
        var path = "/" + url.TrimStart('/');
        for (int i = 0; i < _swipeRoutes.Length; i++)
        {
            if (_swipeRoutes[i] == "/" && (path == "/" || path == "/dashboard"))
                return i;
            if (_swipeRoutes[i] != "/" && path.StartsWith(_swipeRoutes[i], StringComparison.OrdinalIgnoreCase))
                return i;
        }
        // Pages in "More" section - don't highlight any swipe dot
        // Return -1 to indicate no active swipe nav item
        return -1;
    }

    // ═══════════════ SWIPE NAVIGATION CALLBACKS ═══════════════
    [JSInvokable]
    public void NavigateToIndex(int index)
    {
        // Only navigate to the 4 main modules (0-3)
        // "Más" (index 4+) is excluded from swipe - only accessible by tap
        if (index >= 0 && index < _swipeRoutes.Length)
        {
            _currentNavIndex = index;
            NavigationManager.NavigateTo(_swipeRoutes[index]);
        }
        // Do nothing for invalid indices - swipe should not open "Más"
    }

    private bool IsActive(string href)
    {
        var path = "/" + _currentUrl.TrimStart('/');
        if (href == "/")
            return path == "/" || path == "/dashboard";
        return path.StartsWith(href, StringComparison.OrdinalIgnoreCase);
    }
    
    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
    private void ToggleUserMenu() => _userMenuOpen = !_userMenuOpen;
    private void CloseUserMenu() => _userMenuOpen = false;
