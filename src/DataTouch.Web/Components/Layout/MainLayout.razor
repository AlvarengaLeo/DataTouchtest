    private void CloseMoreSheet() => _moreSheetOpen = false;
    
    private void SetTheme(bool isDark)
    {
        _isDarkMode = isDark;
    }
    
    private string GetUserInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "U";
        
        var parts = name.Split(new[] { ' ', '@', '.' }, StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        
        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }
    
    private string GetDisplayName(string? name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "Usuario";
        
        if (name.Contains("@"))
        {
            var namePart = name.Split('@')[0];
            return System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(namePart.Replace(".", " "));
        }
        
        return name;
    }
    
    public async ValueTask DisposeAsync()
