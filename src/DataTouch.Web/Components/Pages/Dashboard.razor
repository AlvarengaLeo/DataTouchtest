                    var point = _chartData[_hoveredPointIndex];
                    var conversion = point.Interactions > 0 ? (decimal)point.Leads / point.Interactions * 100 : 0;
                    <div class="chart-tooltip" style="left: @(GetTooltipLeft(_hoveredPointIndex))px;">
                        <div class="tooltip-date">@GetTooltipDate(point.Date)</div>
                        <div class="tooltip-row">
                            <span class="tooltip-dot interactions"></span>
                            <span class="tooltip-label">Interacciones:</span>
