                            <circle cx="@x" cy="@leadY" r="5" class="data-point leads-point" />
                        }
                    }

                    @* X-axis labels *@
                    @for (int i = 0; i < _chartData.Count; i++)
                    {
                        var x = GetChartX(i);
                        var date = _chartData[i].Date;
                        <g><text x="@x.ToString("F0")" y="228" class="axis-label x-label">@GetXAxisLabel(date)</text></g>
                    }

                    @* Vertical line on hover *@
