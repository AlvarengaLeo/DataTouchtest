@page "/login"
@layout EmptyLayout
@inject NavigationManager Navigation

<PageTitle>Iniciar Sesión - DataTouch</PageTitle>

<div class="login-wrapper">
    <!-- Mobile Header (solo visible en mobile) -->
    <div class="mobile-header">
        <a href="/register" class="mobile-signup-link">Crear cuenta</a>
    </div>

    <!-- Panel Izquierdo - Branding con ondas (oculto en mobile) -->
    <div class="left-panel">
        <div class="wave-container">
            <svg class="wave-bg" viewBox="0 0 500 500" preserveAspectRatio="none">
                <path d="M0,0 L500,0 L500,500 L0,500 Z" fill="#4F46E5"/>
                <path d="M300,0 Q450,150 350,300 Q250,450 400,500 L500,500 L500,0 Z" fill="#4338CA"/>
                <path d="M350,0 Q500,200 400,350 Q350,450 500,500 L500,0 Z" fill="rgba(255,255,255,0.08)"/>
            </svg>
        </div>
        <div class="brand-content">
            <h1 class="brand-title">DataTouch</h1>
            <p class="brand-tagline">Customer Relationship Management</p>
            <p class="brand-description">
                Gestiona tus contactos, leads y relaciones comerciales de manera inteligente y eficiente.
            </p>
        </div>
    </div>

    <!-- Panel Derecho - Formulario -->
    <div class="right-panel">
        <!-- Mobile Logo Badge (solo visible en mobile) -->
        <div class="mobile-logo-section">
            <div class="mobile-logo-badge">
                <div class="logo-inner">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#818CF8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 17L12 22L22 17" stroke="#818CF8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 12L12 17L22 12" stroke="#6366F1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
            </div>
            <div class="mobile-divider"></div>
        </div>

        <div class="form-container">
            <h2 class="form-title">Iniciar Sesión en <span class="highlight">DataTouch</span></h2>

            @if (_showError)
            {
                <div class="error-alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    Email o contraseña incorrectos
                </div>
            }

            <form method="post" action="/api/auth/login">
                <!-- Mobile Labels (solo visible en mobile) -->
                <label class="mobile-label" for="email">Correo electrónico</label>
                <div class="input-group">
                    <div class="input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="2">
                            <rect x="2" y="4" width="20" height="16" rx="2" ry="2"></rect>
                            <path d="M22,6 L12,13 L2,6"></path>
                        </svg>
                    </div>
                    <input type="email" id="email" name="email" required placeholder="Enter your email" />
                </div>

                <label class="mobile-label" for="password">Contraseña</label>
                <div class="input-group password-group">
                    <div class="input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7,11 L7,7 C7,4.239 9.239,2 12,2 C14.761,2 17,4.239 17,7 L17,11"></path>
                        </svg>
                    </div>
                    <input type="@(_showPassword ? "text" : "password")" id="password" name="password" required placeholder="Enter your password" />
                    <button type="button" class="toggle-password" @onclick="TogglePasswordVisibility" @onclick:preventDefault aria-label="Mostrar contraseña">
                        @if (_showPassword)
                        {
                            <!-- Eye Off Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="2">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        }
                        else
                        {
                            <!-- Eye Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        }
                    </button>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" name="rememberMe" />
                        <span class="checkmark"></span>
                        Recordarme
                    </label>
                    <a href="/forgot-password" class="forgot-link">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="login-btn">
                    INICIAR SESIÓN
                </button>
            </form>
        </div>
    </div>
</div>

<style>
