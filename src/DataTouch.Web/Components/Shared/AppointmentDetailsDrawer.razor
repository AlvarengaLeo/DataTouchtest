@* ═══════════════════════════════════════════════════════════════════════════════
   APPOINTMENT DETAILS DRAWER - PREMIUM COMPONENT
   Professional drawer with glass styling, safe actions, and Spanish formatting
   ═══════════════════════════════════════════════════════════════════════════════ *@

@using DataTouch.Domain.Entities
@using System.Globalization
@inject ISnackbar Snackbar

<MudDrawer @bind-Open="IsOpen" Anchor="Anchor.End" Elevation="0" 
           Width="420px" Variant="DrawerVariant.Temporary" 
           Class="appointment-drawer">
    @if (Appointment != null)
    {
        @* ═══════════════ STICKY HEADER ═══════════════ *@
        <div class="drawer-header">
            <div class="d-flex justify-space-between align-center">
                <MudText Typo="Typo.subtitle1" Class="drawer-title">Detalle de Cita</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.Close" Size="Size.Small" 
                               OnClick="@(() => IsOpen = false)" Class="close-btn" />
            </div>
            
            @* Status Badge *@
            <MudChip T="string" Color="@GetStatusColor(Appointment.Status)" 
                     Size="Size.Small" Variant="Variant.Filled" Class="status-chip">
                @GetStatusLabel(Appointment.Status)
            </MudChip>
        </div>
        
        @* ═══════════════ HERO SUMMARY ═══════════════ *@
        <div class="drawer-hero">
            <MudText Typo="Typo.h5" Class="hero-name">@Appointment.CustomerName</MudText>
            <MudText Typo="Typo.body2" Class="hero-service">
                @(Appointment.Service?.Name ?? "Sin servicio asignado")
            </MudText>
            <div class="hero-datetime">
                <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Small" />
                <span>@FormatDateSpanish(Appointment.StartDateTime)</span>
            </div>
        </div>
        
        @* ═══════════════ SCROLLABLE CONTENT ═══════════════ *@
        <div class="drawer-content">
            
            @* CARD: Información de la Cita *@
            <div class="drawer-card">
                <div class="card-header">
                    <MudIcon Icon="@Icons.Material.Filled.Event" Size="Size.Small" />
                    <span>Información de la Cita</span>
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Fecha</span>
                        <span class="info-value">@Appointment.StartDateTime.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Hora</span>
                        <span class="info-value">@Appointment.StartDateTime.ToString("h:mm tt") - @Appointment.EndDateTime.ToString("h:mm tt")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Duración</span>
                        <span class="info-value">@((Appointment.EndDateTime - Appointment.StartDateTime).TotalMinutes) minutos</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Servicio</span>
                        <span class="info-value">@(Appointment.Service?.Name ?? "—")</span>
                    </div>
                </div>
            </div>
            
            @* CARD: Contacto *@
            <div class="drawer-card">
                <div class="card-header">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" />
                    <span>Contacto</span>
                </div>
                
                <div class="contact-row">
                    <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" Class="contact-icon" />
                    <span class="contact-value">@Appointment.CustomerEmail</span>
                </div>
                
                @if (!string.IsNullOrEmpty(Appointment.CustomerPhone))
                {
                    <div class="contact-row">
                        <MudIcon Icon="@Icons.Material.Filled.Phone" Size="Size.Small" Class="contact-icon" />
                        <span class="contact-value">@Appointment.CustomerPhone</span>
                    </div>
                }
                
                <div class="contact-actions">
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Class="contact-btn"
                               StartIcon="@Icons.Material.Filled.ContentCopy"
                               OnClick="@(() => CopyEmail())">
                        Copiar email
                    </MudButton>
                    
                    @if (!string.IsNullOrEmpty(Appointment.CustomerPhone))
                    {
                        <MudButton Variant="Variant.Outlined" Size="Size.Small" Class="contact-btn"
                                   StartIcon="@Icons.Material.Filled.Call"
                                   Href="@($"tel:{Appointment.CustomerPhone}")">
                            Llamar
                        </MudButton>
                        
                        <MudButton Variant="Variant.Outlined" Size="Size.Small" Class="contact-btn whatsapp-btn"
                                   StartIcon="@Icons.Material.Filled.Chat"
                                   Href="@($"https://wa.me/{CleanPhoneNumber(Appointment.CustomerPhone)}")"
                                   Target="_blank">
                            WhatsApp
                        </MudButton>
                    }
                </div>
            </div>
            
            @* CARD: Notas del Cliente *@
            <div class="drawer-card">
                <div class="card-header">
                    <MudIcon Icon="@Icons.Material.Filled.Notes" Size="Size.Small" />
                    <span>Notas del Cliente</span>
                </div>
                
                @if (!string.IsNullOrEmpty(Appointment.CustomerNotes))
                {
                    <p class="notes-text">"@Appointment.CustomerNotes"</p>
                }
                else
                {
                    <p class="notes-empty">Sin notas del cliente</p>
                }
            </div>
            
            @* CARD: Motivo de Cancelación (solo si cancelada) *@
            @if (Appointment.Status == AppointmentStatus.Cancelled && !string.IsNullOrEmpty(Appointment.CancelReason))
            {
                <div class="drawer-card cancel-card">
                    <div class="card-header cancel-header">
                        <MudIcon Icon="@Icons.Material.Filled.Cancel" Size="Size.Small" />
                        <span>Motivo de Cancelación</span>
                    </div>
                    <p class="cancel-reason">@Appointment.CancelReason</p>
                    @if (Appointment.CancelledAt.HasValue)
                    {
                        <span class="cancel-date">Cancelada el @Appointment.CancelledAt.Value.ToString("dd/MM/yyyy h:mm tt")</span>
                    }
                </div>
            }
        </div>
        
        @* ═══════════════ STICKY FOOTER ═══════════════ *@
        <div class="drawer-footer">
            @if (Appointment.Status == AppointmentStatus.Pending)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Success" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.CheckCircle" Class="primary-action"
                           OnClick="@(() => OnConfirm.InvokeAsync())">
                    Confirmar cita
                </MudButton>
                <div class="secondary-actions">
                    <MudButton Variant="Variant.Outlined" Class="secondary-btn"
                               StartIcon="@Icons.Material.Filled.Schedule"
                               OnClick="@(() => OnReschedule.InvokeAsync())">
                        Reprogramar
                    </MudButton>
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AnchorOrigin="Origin.TopCenter" 
                             TransformOrigin="Origin.BottomCenter" Class="more-menu">
                        <MudMenuItem Icon="@Icons.Material.Filled.Cancel" IconColor="Color.Error"
                                     OnClick="@(() => OnCancel.InvokeAsync())">
                            Cancelar cita
                        </MudMenuItem>
                    </MudMenu>
                </div>
            }
            else if (Appointment.Status == AppointmentStatus.Confirmed)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Done" Class="primary-action"
                           OnClick="@(() => OnComplete.InvokeAsync())">
                    Marcar completada
                </MudButton>
                <div class="secondary-actions">
                    <MudButton Variant="Variant.Outlined" Class="secondary-btn"
                               StartIcon="@Icons.Material.Filled.Schedule"
                               OnClick="@(() => OnReschedule.InvokeAsync())">
                        Reprogramar
                    </MudButton>
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AnchorOrigin="Origin.TopCenter" 
                             TransformOrigin="Origin.BottomCenter" Class="more-menu">
                        <MudMenuItem Icon="@Icons.Material.Filled.Cancel" IconColor="Color.Error"
                                     OnClick="@(() => OnCancel.InvokeAsync())">
                            Cancelar cita
                        </MudMenuItem>
                    </MudMenu>
                </div>
            }
            else if (Appointment.Status == AppointmentStatus.Cancelled)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Warning" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Restore" Class="primary-action"
                           OnClick="@(() => OnRestore.InvokeAsync())">
                    Restaurar cita
                </MudButton>
                <MudButton Variant="Variant.Text" FullWidth="true" Class="close-action"
                           OnClick="@(() => IsOpen = false)">
                    Cerrar
                </MudButton>
            }
            else if (Appointment.Status == AppointmentStatus.Completed)
            {
                <div class="completed-badge">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" />
                    <span>Esta cita ha sido completada</span>
                </div>
                <MudButton Variant="Variant.Text" FullWidth="true" Class="close-action"
                           OnClick="@(() => IsOpen = false)">
                    Cerrar
                </MudButton>
            }
        </div>
    }
</MudDrawer>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    [Parameter] public Appointment? Appointment { get; set; }
    
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnComplete { get; set; }
    [Parameter] public EventCallback OnReschedule { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnRestore { get; set; }
    
    private static readonly CultureInfo SpanishCulture = new("es-SV");
    
    private string FormatDateSpanish(DateTime date)
    {
        var dayName = date.ToString("dddd", SpanishCulture);
        dayName = char.ToUpper(dayName[0]) + dayName.Substring(1);
        var day = date.Day;
        var month = date.ToString("MMM", SpanishCulture);
        month = char.ToUpper(month[0]) + month.Substring(1).TrimEnd('.');
        var time = date.ToString("h:mm tt");
        
        return $"{dayName}, {day} {month} · {time}";
    }
    
    private string CleanPhoneNumber(string? phone)
    {
        if (string.IsNullOrEmpty(phone)) return "";
        return phone.Replace(" ", "").Replace("-", "").Replace("(", "").Replace(")", "");
    }
    
    private void CopyEmail()
    {
        Snackbar.Add("Email copiado al portapapeles", Severity.Info);
    }
    
    private Color GetStatusColor(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Pending => Color.Warning,
        AppointmentStatus.Confirmed => Color.Info,
        AppointmentStatus.Completed => Color.Success,
        AppointmentStatus.Cancelled => Color.Default,
        AppointmentStatus.NoShow => Color.Error,
        _ => Color.Default
    };
    
    private string GetStatusLabel(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Pending => "Pendiente",
        AppointmentStatus.Confirmed => "Confirmada",
        AppointmentStatus.Completed => "Completada",
        AppointmentStatus.Cancelled => "Cancelada",
        AppointmentStatus.NoShow => "No asistió",
        _ => status.ToString()
    };
}

